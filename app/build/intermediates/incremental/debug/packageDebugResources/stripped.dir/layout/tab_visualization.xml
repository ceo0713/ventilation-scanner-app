<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/webview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/control_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/control_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="?attr/colorSurface"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/start_simulation_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_velocity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/metric_velocity"
            android:checked="true"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_marginEnd="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_deadzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dead_zones"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_marginEnd="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_concentration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/virus_concentration"
            style="@style/Widget.Material3.Chip.Filter" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_simulation_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/run_simulation"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
